<h3><%= link_to @patient.name, edit_patient_path(@patient) %></h3>
<p>age: <%= @patient.age %></p>
<p>  Appointments:</p>
<ul>
<% @patient.appointments.each do |appt|  %>
<li><%= link_to appt.doctor.name, doctor_path(appt.doctor) %>
  <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></li>
<% end %>
</ul>
<p><%= link_to 'Index', patients_path %></p>
