<h1>Patient: <%= @patient.name %></h1>



<ul><% @patient.doctors.each do |doctor| %>
	<li><%= link_to doctor.name, doctor %></li>
	<% end %></ul>


<h4>Appointments</h4>

<ul><% @patient.appointments.each do |appt| %>
	<li><%= link_to appt.appointment_datetime.strftime('%B %d, %Y at %H:%M'), appointment_url %><br>
		<%= link_to appt.doctor.name, appt.doctor %></li>
	<% end %></ul>